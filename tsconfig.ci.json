{
  "extends": "./tsconfig.json",
  "include": [
    "next-env.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/tests",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "playwright-report",
    "test-results",
    "coverage",
    "scripts",
    "mock-data",
    "real-data"
  ],
  "compilerOptions": {
    "noEmit": true
  }
}
