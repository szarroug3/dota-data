# Dota Data Dashboard Environment Variables
# 
# This file contains all available environment variables for the application.
# Copy this file to .env.local and uncomment the variables you need.
# 
# For detailed documentation, see: docs/development/environment-variables.md
# 
# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Application Settings
# NODE_ENV=development
# NEXT_PUBLIC_APP_URL=http://localhost:3000

# Mock Mode Settings
# Controls whether external APIs are mocked for development
# USE_MOCK_API=true
# USE_MOCK_OPENDOTA=true
# USE_MOCK_DOTABUFF=true
# USE_MOCK_STRATZ=true
# USE_MOCK_D2PT=true
# WRITE_REAL_DATA_TO_MOCK=false
# MOCK_RATE_LIMIT=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Centralized logging for development and debugging
# DEBUG_LOGGING=false
# LOG_LEVEL=info
# LOG_FILE_PATH=logs/server.log

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

# Redis is used for distributed caching and rate limiting in production
# REDIS_URL=
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=
# USE_REDIS=false

# =============================================================================
# QSTASH CONFIGURATION (Optional)
# =============================================================================

# QStash is used for background job processing in production
# QSTASH_TOKEN=
# QSTASH_CURRENT_SIGNING_KEY=
# QSTASH_NEXT_SIGNING_KEY=
# USE_QSTASH=false

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Rate limits for external APIs (requests per minute)
# RATE_LIMIT_OPENDOTA=60
# RATE_LIMIT_DOTABUFF=60
# RATE_LIMIT_STRATZ=20
# RATE_LIMIT_D2PT=30
# RATE_LIMIT_WINDOW=60

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# OpenDota API Settings
# OPENDOTA_API_KEY=
# OPENDOTA_API_BASE_URL=https://api.opendota.com/api
# OPENDOTA_API_TIMEOUT=10000

# Dotabuff Settings
# DOTABUFF_BASE_URL=https://www.dotabuff.com
# DOTABUFF_REQUEST_DELAY=1000

# Dota2ProTracker Settings
# D2PT_BASE_URL=https://dota2protracker.com
# D2PT_REQUEST_DELAY=2000

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Settings for running tests
# TEST_MOCK_MODE=true
# TEST_TIMEOUT=10000
